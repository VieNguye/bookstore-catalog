<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Catalog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4 text-center">ðŸ“š Book Catalog</h1>
    <div class="row">
      <% books.forEach(book => { %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text text-muted">by <%= book.author %></p>
              <p class="card-text fw-bold"><%= book.price %></p>
              <a href="http://<shopping-cart-service-host>/cart?title=<%= book.title %>&author=<%= book.author %>&price=<%= book.price %>" class="btn btn-primary">Buy Now</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
